    "factoryClass": "org.comeonwallpaper.imgsource.factory.BlurFillingImgSourceFactory",
    "settings": {
      "radius": 30
    },
    "dependencies": [
      {
        "factoryClass": "org.comeonwallpaper.imgsource.factory.RandomImgSourceFactory",
        "settings": {
          "weights": [1, 1]
        },
        "dependencies": [
          {
            "factoryClass": "org.comeonwallpaper.imgsource.factory.DirImgSourceFactory",
            "settings": {
              "path": "D:\\my_dir",
              "mode": "RANDOM",
              "refreshIntervalMs": 60000
            }
          },
          {
            "factoryClass": "org.comeonwallpaper.imgsource.factory.DirImgSourceFactory",
            "settings": {
              "path": "D:\\my_dir",
              "mode": "RANDOM",
              "refreshIntervalMs": 60000
            }
          }
        ]
      }
    ]
  },
  "schedule": {
    "intervalMs": 10000
  }
}